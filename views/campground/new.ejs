<%- include ("../partials/header") %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a New Campground</h1>
                <div style="width: 30%; margin: 25px auto;">
                        <form action="/campgrounds" method="POST">
                                <div class="form-group">
                                    <input class="form-control"type="text" placeholder="Location Name" name='title'>
                                </div>
                                <div class="form-group">
                                    <input class="form-control"type="text" placeholder="Image URL" name='image'>
                                </div>
                                <div class="form-group">
                                        <input class="form-control"type="text" placeholder="Description" name='description'>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-large btn-block btn-default">Submit</button>
                                </div>
                        </form>
                                <a href="/campgrounds">Go Back</a>
                </div>     
        </div>
    </div>



