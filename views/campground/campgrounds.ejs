<%- include ("../partials/header") %>
<div class="container"> 
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Campsite</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-large btn-primary"href="/campgrounds/new">Create New Campsite</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campground</h3>
        </div>
    </div>

    <div class="row text-center" style="display: flex;flex-wrap:wrap;">
        <% Campgrounds.forEach(function(Campgrounds) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                        <img src="<%= Campgrounds.image %>" alt="">
                        <div class="caption">
                                <h4><%= Campgrounds.title %></h4>
                        </div>
                        <a href="/campgrounds/<%= Campgrounds._id %>" class="btn btn-medium btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>

</div>
<%- include ("../partials/footer") %>